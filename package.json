{
  "name": "vscode-time-analytics",
  "displayName": "Time Analytics",
  "description": "Track your coding time, idle time, and project statistics locally within VS Code.",
  "version": "0.1.0",
  "publisher": "leventaksakal56",
  "repository": {
    "type": "git",
    "url": "https://github.com/LeventAksakal/vscode-time-analytics"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "time tracking",
    "analytics",
    "productivity",
    "statistics",
    "wakatime"
  ],
  "activationEvents": [
    "onView:time-analytics-sidebar",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "assets/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "timeAnalytics.showFileStats",
        "title": "Show File Time Stats",
        "icon": "$(clock)"
      },
      {
        "command": "timeAnalytics.refreshStats",
        "title": "Refresh Stats",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "timeAnalytics.showFileStats",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "timeAnalytics.refreshStats",
          "when": "view == time-analytics-sidebar",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "time-analytics-container",
          "title": "Time Analytics",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "time-analytics-container": [
        {
          "id": "time-analytics-sidebar",
          "name": "Overview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
