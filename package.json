{
  "name": "vscode-time-analytics-monorepo",
  "private": true,
  "workspaces": [
    "extension",
    "webview-ui"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "echo \"No tests defined\"",
    "build": "npm run compile --workspace=extension && npm run build --workspace=webview-ui",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml}": "prettier --write",
    "extension/src/**/*.{ts,js}": "eslint --fix",
    "webview-ui/src/**/*.{ts,tsx,js,jsx}": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
